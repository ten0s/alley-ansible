# http://docs.mongodb.org/v2.6/reference/configuration-options/

systemLog:
   destination: file
   path: /var/log/mongodb/mongod.log
   logAppend: true

storage:
  dbPath: {{mongodb_dbpath}}

processManagement:
   fork: true
   pidFilePath: /var/run/mongodb/mongod.pid

net:
   bindIp: 0.0.0.0
   port: 27017

{% if mongodb_replset is defined %}
replication:
  replSetName: {{mongodb_replset}}
{% endif %}
