vagrant up

ansible all -i ansible/replica -m ping

ansible all -i ansible/replica -s -m shell -a 'echo "192.168.100.201 node1 node1.dev1team.net" >> /etc/hosts'
ansible all -i ansible/replica -s -m shell -a 'echo "192.168.100.202 node2 node2.dev1team.net" >> /etc/hosts'
ansible all -i ansible/replica -s -m shell -a 'echo "192.168.100.203 arbiter arbiter.dev1team.net" >> /etc/hosts'
ansible all -i ansible/replica -s -m shell -a 'echo "192.168.100.204 arbiter2 arbiter2.dev1team.net" >> /etc/hosts'

ansible-playbook ../../provision-common-env.yml -i ansible/replica

ansible-playbook ../../provision-backend-env.yml -i ansible/replica --tags mongodb
setup replica

ansible-playbook ../../provision-backend-env.yml -i ansible/replica --tags erlang,rabbitmq,haproxy,smppsim
ansible-playbook ../../deploy.yml -i ansible/replica --tags funnel,kelly,just

ansible-playbook ../../provision-cluster.yml -i ansible/replica
crm configure load replace /etc/cluster/cluster_init_conf.cib
